<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail_orderActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/do_drinkname"
        android:text="드링크 이름"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="45dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">
    </TextView>
    <TextView
        android:id="@+id/do_drinkprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="가격"
        android:gravity="center"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/do_drinkname"
        tools:ignore="MissingConstraints,UnknownId">
    </TextView>

    <Button
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="+"
        android:textSize="22dp"
        android:background="#00000000"
        app:layout_constraintRight_toLeftOf="@+id/count"
        app:layout_constraintTop_toBottomOf="@+id/do_drinkprice"
        tools:ignore="MissingConstraints"></Button>

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@+id/do_drinkprice"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints">
    </TextView>
    <Button
        android:id="@+id/minus"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="-"
        android:textSize="22dp"
        android:background="#00000000"
        app:layout_constraintLeft_toRightOf="@+id/count"
        app:layout_constraintTop_toBottomOf="@+id/do_drinkprice"
        tools:ignore="MissingConstraints"></Button>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        >

        <Button
            android:layout_weight="1"
            android:id="@+id/drink_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textStyle="bold"
            android:textSize="26dp"
            android:background="#00000000">
        </Button>
        <Button
            android:layout_weight="1"
            android:id="@+id/drink_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추가"
            android:textStyle="bold"
            android:textSize="26dp"
            android:background="#00000000">
        </Button>

    </LinearLayout>
